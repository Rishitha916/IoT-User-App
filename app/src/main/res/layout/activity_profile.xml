<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greengradient"
    tools:context="com.dushan.rishitha.iotuserapplication.profile">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="My Profile"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Email"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginStart="28dp"
        android:layout_alignTop="@+id/username1"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Location"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_below="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_marginTop="34dp" />

    <Button
        android:id="@+id/bdevices"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:onClick="viewDevices"
        android:text="View My Devices"
        android:layout_alignBaseline="@+id/bmembers"
        android:layout_alignBottom="@+id/bmembers"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bmembers"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:onClick="viewMembers"
        android:text="View Members"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/username1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="79dp"
        android:text="" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:onClick="session.logoutUser"
        android:text="Logout"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView33" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:onClick="changePassword"
        android:layout_below="@+id/bmembers"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/location"
        android:layout_toEndOf="@+id/button2" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textView32"
        android:layout_alignStart="@+id/textView32"
        android:layout_marginTop="27dp" />


</RelativeLayout>
